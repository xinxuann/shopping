<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd     
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">
        
    <!-- spring可以自动去扫描base-pack下面的包或者子包下面的java文件，
    	如果扫描到有Spring的相关注解的类，则把这些类注册为Spring的bean -->
<!--     <context:component-scan base-package="com.zzy.shoppingApp.controller"/>
 -->
       <context:component-scan base-package="com"/>
     
    <!-- 开启注解扫描 -->
    <mvc:annotation-driven/>
    
    <!-- 使用默认的Servlet来响应静态资源文件 -->
    <mvc:default-servlet-handler/>
   
    
   <!-- 配置Spring Mvc的视图解析器 -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
       <!-- 指定跳转视图的前缀 -->
       <property name="prefix" value="/WEB-INF/jsp/"/>
       <!-- 指定跳转视图的后缀 -->
       <property name="suffix" value=".jsp"/>
    </bean>
    
    <mvc:interceptors>
         <!-- 前台登录拦截器 -->
        <mvc:interceptor>
             <!-- 指定拦截的地址 -->
             <!-- http://127.0.0.1:8080/项目名/addToCar.do -->
             <mvc:mapping path="/*.do"/>
              <!-- http://127.0.0.1:8080/项目名/shopCar/addToCar.do -->
             <mvc:mapping path="/*/*.do"/>
            
             <!-- 声明拦截器的信息 -->
             <bean class="com.zzy.shoppingApp.filter.LoginFilter"></bean>
        </mvc:interceptor>
        
        <!-- 后台登录拦截器 -->
         <mvc:interceptor>
             <!-- 指定拦截的地址 -->
             <mvc:mapping path="/*.action"/>
             <mvc:mapping path="/*/*.action"/>
            
             <!-- 声明拦截器的信息 -->
             <bean class="com.zzy.shoppingApp_manager.util.filter.ManagerLoginInterceptor"></bean>
        </mvc:interceptor>
    
    </mvc:interceptors>
    
     <bean id="multipartResolver"  
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver">  
		<!-- 上传文件大小上限，单位为字节（10MB） -->
        <property name="maxUploadSize">  
            <value>10485760</value>  
        </property>  
        <!-- 请求的编码格式，必须和jSP的pageEncoding属性一致，以便正确读取表单的内容，默认为ISO-8859-1 -->
        <property name="defaultEncoding">
        	<value>UTF-8</value>
        </property>
    </bean>
    
    <!--  
      http://127.0.0.1:8080/项目名/login    == >  /WEB-INF/jsp/login.jsp
    -->
    <!-- 指定视图与 控制器的映射关系 -->
    <mvc:view-controller path="/login"/>
    <mvc:view-controller path="/register"/>
  
</beans>